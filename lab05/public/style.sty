// Body CSS
 body 
        font: 24px Helvetica
        background: #999999
    
// MAIN CLASS
    #main 
       
        min-height: 700px
        margin: zero
        padding: zero
        display: flex
        flex-flow: row

        // ARTICLE TAG
        > article 
            border-style: solid
            border-width: 1px
            margin: zero
            padding: zero
            font-family: "Comic Sans MS"
            border-radius: 0pt
            background: #dddd88
            flex: 3 1 30%
            order: 2
    
        // NAV TAG
        > nav 
            border-style: solid
            border-width: 1px
            margin: zero
            padding: zero
            font-family: "Times New Roman"
            border-radius: 0pt
            background: #ccccff
         
            flex: 1 6 20%
            order: 1
    
        // ASIDE TAG
        > aside 
            border-style: solid
            border-width: 1px
            margin: zero
            padding: zero
            font-size: 15px;
            font-family: "Lucida"
            border-radius: 0pt
            background: #ccccff
            flex: 1 6 20%
            order: 3
    
    // HEADER,FOOTER TAG
    header, footer 
        border-style: solid
        border-width: 1px
        display: block
        margin: zero
        padding: zero
        min-height: 100px
   
        border-radius: 0pt
        background: #ffeebb
    
 
    /* Too narrow to support three columns */
    @media all and (max-width: 640px) 
        #main, #page 
            flex-direction: column
        

        #main > article, #main > nav, #main > aside 
        /* Return them to document order */
            order: 0
        
  
        #main > nav, #main > aside, header, footer 
            min-height: 50px
            max-height: 50px
        
    